  <div class="container-fluid blog-nav">
    <a class="navbar-brand" href="/">Hawk Box</a>
    <button class="navbar-toggler navbar-dark" type="button" data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
      aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/blogpost">Blog</a>
        </li>
      </ul>
    </div>
  </div>
</nav>
<div class="row" id="commentDisplay">
  <div class="col-2"></div>
  <div class="col-8">
    <div class="card">
      <h5 class="card-header">{{dataValues.title}}</h5>
      <div class="card-body">
        <div id="iframe">
          <iframe id="player" type="text/html" width="640" height="390" src="{{dataValues.video}}"
            frameborder="0"></iframe>
        </div>
        <p class="card-text">{{dataValues.body}}</p>
        <label for="commentText">Leave a comment</label>
        <textarea class="form-control" id="Comment" rows="3"></textarea>
        <button type="button" id="commentSubmit" class="btn btn-success">Submit</button>
      </div>
    </div>
  </div>
  <div class="col-2"></div>
</div>

<div class="row" id="commentSection">
  <div class="col-2"></div>
  <div class="col-8">
    <div class="card">
      <div class="card-body">
        {{#each Comments}}
        <blockquote class="blockquote mb-0">
          <p>{{dataValues.body}}</p>
          <footer class="blockquote-footer"><cite title="author">{{dataValues.UserId}}</cite></footer>
        </blockquote>

        {{/each}}
      </div>
      <div class="col-2"></div>
    </div>
    <script src="/js/singlepost.js"></script>